<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<style>
	.customHeader{
		text-align: center;
    }

    .inline-block {
        display: inline-block;
    }
</style>

<!------ Include the above in your HEAD tag ---------->
<div class="pb-2 mt-4 mb-2 border-bottom customHeader">
    <h3> Feedback List </h3>
</div>
<div class="container contact">

	<div class="tab-content">
		<div class="active" id="showData" role="tabpanel">
			<table class="table table-striped" id="table" data-height="460">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Phone
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each feedbacks}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.name}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.phone}}</td>
                            <td>
                                <form action="/view-feedback" method="GET" class="inline-block">
                                    <input type="hidden" value="{{this.id}}" name="feedbackId" />
                                    <input type="hidden" name="page" value="{{page}}" />
                                    <input type="submit" class="btn btn-outline-info" value="View" />
                                </form>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
			</table>	
		</div>
        {{#if hasPreviousPage}}
            <form action="/view-feedbacks" method="GET" class="inline-block">
                <input type="hidden" name="page" value="{{prevPage}}" />
                <input type="submit" class="btn btn-outline-info" value="Previous" />
            </form>
        {{/if}}
        {{#if hasNextPage}}
            <form action="/view-feedbacks" method="GET" class="inline-block">
                <input type="hidden" name="page" value="{{nextPage}}" />
                <input type="submit" class="btn btn-outline-info" value="Next" />
            </form>
        {{/if}}
	</div>	
</div>
